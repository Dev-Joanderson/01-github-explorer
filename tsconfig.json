{
  "compilerOptions": {
    "lib": ["DOM","DOM.Iterable","esnext"],
    "allowJs": true,                                
    "jsx": "react-jsx",                                
    "noEmit": true,                                   
    "strict": true,                                     
    "moduleResolution": "node",                       
    "resolveJsonModule": true,                        
    "isolatedModules": true,                         
    "esModuleInterop": true,
    "skipLibCheck": true,                                 
    "forceConsistentCasingInFileNames": true            
  },
  "include": ["src"]
}
